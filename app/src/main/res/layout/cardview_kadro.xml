<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height">

            <ImageView
                android:id="@+id/imageView_OyuncuLogo"
                android:layout_width="@dimen/layout_wh"
                android:layout_height="@dimen/layout_wh"
                android:layout_marginStart="@dimen/card_padding"
                android:layout_marginTop="@dimen/card_padding"
                android:layout_marginBottom="@dimen/card_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txt_OyuncuAdi"
                android:layout_width="@dimen/layout_width"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/left_Margin"
                android:textColor="@color/color_Purple"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toEndOf="@+id/imageView_OyuncuLogo"
                app:layout_constraintTop_toTopOf="@+id/imageView_OyuncuLogo"
                tools:text="LeBron James" />

            <TextView
                android:id="@+id/txt_Pozisyon"
                android:layout_width="@dimen/layout_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_Margin"
                android:textColor="@color/color_Purple"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="@+id/txt_OyuncuAdi"
                app:layout_constraintTop_toBottomOf="@+id/txt_OyuncuAdi"
                tools:text="PF" />

            <TextView
                android:id="@+id/txt_Yas"
                android:layout_width="@dimen/layout_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_Margin"
                android:textColor="@color/color_Purple"
                android:textSize="@dimen/text_size"
                app:layout_constraintStart_toStartOf="@+id/txt_Pozisyon"
                app:layout_constraintTop_toBottomOf="@+id/txt_Pozisyon"
                tools:text="Yasi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>